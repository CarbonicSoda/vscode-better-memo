{
	"name": "better-memo",
	"displayName": "Better Memo",
	"description": "pass",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.75.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "better-memo.switchToFileView",
				"title": "Switch to File View",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerView == Tag",
				"icon": "$(folder-library)"
			},
			{
				"command": "better-memo.switchToTagView",
				"title": "Switch to Tag View",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerView == File",
				"icon": "$(symbol-parameter)"
			},
			{
				"command": "better-memo.reloadExplorer",
				"title": "Refresh Explorer",
				"enablement": "better-memo.explorerInitFinished",
				"icon": "$(refresh)"
			},
			{
				"command": "better-memo.explorerCompleteAll",
				"title": "Mark All Memos as Completed",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll",
				"icon": "$(checklist)"
			},
			{
				"command": "better-memo.explorerExpandAll",
				"title": "Expand All",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll",
				"icon": "$(expand-all)"
			},
			{
				"command": "better-memo.navigateToFile",
				"title": "Navigate to File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "better-memo.completeFile",
				"title": "Mark All Memos in File as Completed",
				"icon": "$(check-all)"
			},
			{
				"command": "better-memo.completeFileNoConfirm",
				"title": "Mark All Memos in File as Completed"
			},
			{
				"command": "better-memo.completeTag",
				"title": "Mark All Memos Under Tag as Completed",
				"icon": "$(check-all)"
			},
			{
				"command": "better-memo.completeTagNoConfirm",
				"title": "Mark All Memos Under Tag as Completed"
			},
			{
				"command": "better-memo.navigateToMemo",
				"title": "Navigate to Memo"
			},
			{
				"command": "better-memo.completeMemo",
				"title": "Mark Memo as Completed",
				"icon": "$(check)"
			},
			{
				"command": "better-memo.confirmCompleteMemo",
				"title": "Confirm Completion",
				"icon": "$(trash)"
			},
			{
				"command": "better-memo.completeMemoNoConfirm",
				"title": "Mark Memo as Completed"
			}
		],
		"keybindings": [
			{
				"command": "better-memo.switchToFileView",
				"when": "focusedView == 'better-memo.memoExplorer' && treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerView == Tag",
				"key": "Ctrl+Shift+V"
			},
			{
				"command": "better-memo.switchToTagView",
				"when": "focusedView == 'better-memo.memoExplorer' && treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerView == File",
				"key": "Ctrl+Shift+V"
			},
			{
				"command": "better-memo.reloadExplorer",
				"when": "focusedView == 'better-memo.memoExplorer' && better-memo.explorerInitFinished",
				"key": "Ctrl+R"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "memoExplorer",
					"title": "Memo Explorer",
					"icon": "$(output)"
				}
			]
		},
		"views": {
			"memoExplorer": [
				{
					"id": "better-memo.memoExplorer",
					"name": "Memo Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "better-memo.switchToFileView",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished && better-memo.explorerView == Tag",
					"group": "navigation@1"
				},
				{
					"command": "better-memo.switchToTagView",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished && better-memo.explorerView == File",
					"group": "navigation@1"
				},
				{
					"command": "better-memo.reloadExplorer",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished",
					"group": "navigation@2"
				},
				{
					"command": "better-memo.explorerCompleteAll",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished && !better-memo.noFiles && !better-memo.noMemos",
					"group": "navigation@3"
				},
				{
					"command": "better-memo.explorerExpandAll",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished",
					"group": "navigation@4"
				}
			],
			"view/item/context": [
				{
					"command": "better-memo.navigateToFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == File",
					"group": "inline@1"
				},
				{
					"command": "better-memo.navigateToFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == File"
				},
				{
					"command": "better-memo.completeFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == File",
					"group": "inline@2"
				},
				{
					"command": "better-memo.completeFileNoConfirm",
					"when": "view.better-memo.memoExplorer.visible && viewItem == File"
				},
				{
					"command": "better-memo.completeTag",
					"when": "view.better-memo.memoExplorer.visible && viewItem == Tag",
					"group": "inline@1"
				},
				{
					"command": "better-memo.completeTagNoConfirm",
					"when": "view.better-memo.memoExplorer.visible && viewItem == Tag"
				},
				{
					"command": "better-memo.completeMemo",
					"when": "view.better-memo.memoExplorer.visible && viewItem == Memo",
					"group": "inline@1"
				},
				{
					"command": "better-memo.confirmCompleteMemo",
					"when": "view.better-memo.memoExplorer.visible && viewItem == MemoWaitingForCompletionConfirmation",
					"group": "inline@1"
				},
				{
					"command": "better-memo.completeMemoNoConfirm",
					"when": "view.better-memo.memoExplorer.visible && viewItem == Memo"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "better-memo.memoExplorer",
				"contents": "Memos are loading.\nIf this is taking too long, consider inspecting fetcher configurations.",
				"when": "!better-memo.explorerInitFinished && !treeView.better-memo.memoExplorer.toggleCollapseAll"
			},
			{
				"view": "better-memo.memoExplorer",
				"contents": "You have not yet opened any folders.\n[Open Folder](command:workbench.action.files.openFolder)",
				"when": "better-memo.explorerInitFinished && better-memo.noFiles"
			},
			{
				"view": "better-memo.memoExplorer",
				"contents": "Oops, cannot spot any memos throughout the universe!\nConsider spicing up the place with some memos!\nIf this is not intended, consider inspecting fetcher configurations.",
				"when": "better-memo.explorerInitFinished && !better-memo.noFiles && better-memo.noMemos"
			}
		],
		"configuration": [
			{
				"title": "General",
				"order": 1,
				"properties": {
					"better-memo.general.customTags": {
						"order": 111,
						"title": "Custom Tags",
						"type": "object",
						"uniqueItems": true,
						"additionalProperties": {
							"type": "string"
						},
						"default": {
							"TODO": "#fff86b",
							"FIX": "#f21d1d",
							"REFACTOR": "#83d6f2"
						}
					}
				}
			},
			{
				"title": "Fetcher",
				"order": 2,
				"properties": {
					"better-memo.fetcher.watch": {
						"order": 211,
						"title": "Watch",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"**/*"
						]
					},
					"better-memo.fetcher.ignore": {
						"order": 212,
						"title": "Ignore",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"**/node_modules"
						]
					},
					"better-memo.fetcher.scanDelay": {
						"order": 221,
						"title": "Scan Delay",
						"type": "integer",
						"default": 1000,
						"minimum": 500,
						"maximum": 10000
					},
					"better-memo.fetcher.forceScanDelay": {
						"order": 222,
						"title": "Force Scan Delay",
						"type": "integer",
						"default": 5000,
						"minimum": 1000,
						"maximum": 30000
					},
					"better-memo.fetcher.workspaceScanDelay": {
						"order": 223,
						"title": "Workspace Scan Delay",
						"type": "integer",
						"default": 10000,
						"minimum": 2000,
						"maximum": 70000
					}
				}
			},
			{
				"title": "View",
				"order": 3,
				"properties": {
					"better-memo.view.defaultView": {
						"order": 311,
						"title": "Default View",
						"type": "string",
						"enum": [
							"File",
							"Tag"
						],
						"default": "File"
					},
					"better-memo.view.expandPrimaryItemsByDefault": {
						"order": 321,
						"title": "Expand Primary Items by Default",
						"type": "boolean",
						"default": true
					},
					"better-memo.view.expandSecondaryItemsByDefault": {
						"order": 322,
						"title": "Expand Secondary Items by Default",
						"type": "boolean",
						"default": true
					}
				}
			},
			{
				"title": "Actions",
				"order": 4,
				"properties": {
					"better-memo.actions.askForConfirmationOnCompletionOfMemo": {
						"order": 411,
						"title": "Ask for Confirmation on Completion of Memo",
						"type": "boolean",
						"default": false
					},
					"better-memo.actions.timeoutOfConfirmationOnCompletionOfMemo": {
						"order": 412,
						"title": "Timeout of Confirmation on Completion of Memo",
						"type": "integer",
						"default": 3000
					},
					"better-memo.actions.alwaysOpenChangedFileOnCompletionOfMemo": {
						"order": 413,
						"title": "Always Open Changed File on Completion of Memo",
						"type": "boolean",
						"default": true
					},
					"better-memo.actions.askForConfirmationOnCompletionOfMemos": {
						"order": 421,
						"title": "Ask for Confirmation on Completion of Memos",
						"type": "boolean",
						"default": true
					},
					"better-memo.actions.removeLineIfMemoIsOnSingleLine": {
						"order": 431,
						"title": "Remove Line if Memo Is on Single Line",
						"type": "boolean",
						"default": true
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9"
	}
}

