{
	"name": "better-memo",
	"displayName": "Better Memo",
	"description": "pass",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.75.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "better-memo.explorerExpandAll",
				"title": "Expand All",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll",
				"icon": "$(expand-all)"
			},
			{
				"command": "better-memo.switchToFileView",
				"title": "Switch to File View",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerIsTagView",
				"icon": "$(folder-library)"
			},
			{
				"command": "better-memo.switchToTagView",
				"title": "Switch to Tag View",
				"enablement": "treeView.better-memo.memoExplorer.toggleCollapseAll && better-memo.explorerIsFileView",
				"icon": "$(symbol-parameter)"
			},
			{
				"command": "better-memo.navigateToMemo",
				"title": "Navigate to Memo"
			},
			{
				"command": "better-memo.navigateToFile",
				"title": "Navigate to File",
				"icon": "$(go-to-file)"
			},
			{
				"command": "better-memo.completeMemo",
				"title": "Mark Memo as Complete",
				"icon": "$(check)"
			},
			{
				"command": "better-memo.completeMemoNoConfirm",
				"title": "Mark Memo as Complete"
			},
			{
				"command": "better-memo.confirmCompleteMemo",
				"title": "Confirm Completion",
				"icon": "$(trash)"
			},
			{
				"command": "better-memo.completeFile",
				"title": "Mark All Memos in File as Complete",
				"icon": "$(check-all)"
			},
			{
				"command": "better-memo.completeTag",
				"title": "Mark All Memos Under Tag as Complete",
				"icon": "$(tag-remove)"
			},
			{
				"command": "better-memo.completeAll",
				"title": "Mark All Memos as Complete",
				"icon": "$(checklist)"
			}
		],
		"keybindings": [],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "memoExplorer",
					"title": "Memo Explorer",
					"icon": "$(output)"
				}
			]
		},
		"views": {
			"memoExplorer": [
				{
					"id": "better-memo.memoExplorer",
					"name": "Memo Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "better-memo.switchToFileView",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished && better-memo.explorerIsTagView",
					"group": "navigation@1"
				},
				{
					"command": "better-memo.switchToTagView",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished && better-memo.explorerIsFileView",
					"group": "navigation@1"
				},
				{
					"command": "better-memo.explorerExpandAll",
					"when": "view.better-memo.memoExplorer.visible && better-memo.explorerInitFinished",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "better-memo.navigateToFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == file",
					"group": "inline@1"
				},
				{
					"command": "better-memo.navigateToFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == file"
				},
				{
					"command": "better-memo.completeMemo",
					"when": "view.better-memo.memoExplorer.visible && viewItem == memo",
					"group": "inline@1"
				},
				{
					"command": "better-memo.completeMemoNoConfirm",
					"when": "view.better-memo.memoExplorer.visible && viewItem == memo"
				},
				{
					"command": "better-memo.confirmCompleteMemo",
					"when": "view.better-memo.memoExplorer.visible && viewItem == memoWaitingForConfirmComplete",
					"group": "inline@1"
				},
				{
					"command": "better-memo.completeFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == file",
					"group": "inline@2"
				},
				{
					"command": "better-memo.completeFile",
					"when": "view.better-memo.memoExplorer.visible && viewItem == file"
				},
				{
					"command": "better-memo.completeTag",
					"when": "view.better-memo.memoExplorer.visible && viewItem == tag",
					"group": "inline@1"
				},
				{
					"command": "better-memo.completeTag",
					"when": "view.better-memo.memoExplorer.visible && viewItem == tag"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "better-memo.memoExplorer",
				"contents": "Memos are loading.\nIf this is taking too long, consider changing fetcher configurations.",
				"when": "!better-memo.explorerInitFinished && !treeView.better-memo.memoExplorer.toggleCollapseAll"
			},
			{
				"view": "better-memo.memoExplorer",
				"contents": "You have not yet opened any folders.\n[Open Folder](command:workbench.action.files.openFolder)",
				"when": "better-memo.explorerInitFinished && better-memo.noFiles"
			},
			{
				"view": "better-memo.memoExplorer",
				"contents": "Oops, cannot spot any memos throughout the universe!\nConsider spicing up the place with some memos!",
				"when": "better-memo.explorerInitFinished && !better-memo.noFiles && better-memo.noMemos"
			}
		],
		"configuration": {
			"title": "Better Memo",
			"properties": {
				"better-memo.fetcher.watch": {
					"order": 0,
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/*"
					]
				},
				"better-memo.fetcher.ignore": {
					"order": 1,
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"**/node_modules"
					]
				},
				"better-memo.fetcher.scanDelay": {
					"order": 2,
					"type": "integer",
					"default": 1000
				},
				"better-memo.fetcher.forceScanDelay": {
					"order": 3,
					"type": "integer",
					"default": 10000
				},
				"better-memo.fetcher.workspaceScanDelay": {
					"order": 4,
					"type": "integer",
					"default": 10000
				},
				"better-memo.view.defaultView": {
					"order": 5,
					"type": "string",
					"enum": [
						"File",
						"Tag"
					],
					"default": "File"
				},
				"better-memo.view.expandPrimaryByDefault": {
					"order": 6,
					"type": "boolean",
					"default": true
				},
				"better-memo.view.expandSecondaryByDefault": {
					"order": 7,
					"type": "boolean",
					"default": true
				},
				"better-memo.view.confirmCompleteMemo": {
					"order": 8,
					"type": "boolean",
					"default": false
				},
				"better-memo.view.confirmCompleteMultiple": {
					"order": 9,
					"type": "boolean",
					"default": true
				},
				"better-memo.view.confirmCompleteTimeout": {
					"order": 10,
					"type": "integer",
					"default": 3000
				},
				"better-memo.view.alwaysOpenFileOnCompleteSingleMemo": {
					"order": 11,
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9"
	}
}

