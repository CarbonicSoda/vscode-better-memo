{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": ["ES2020"],
		"rootDir": "src",
		"sourceMap": true,

		"strict": true,
		"strictNullChecks": false,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"removeComments": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
